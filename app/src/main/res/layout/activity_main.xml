<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="CALCULATE YOUR"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView

        android:text="Age"
        android:background="#00B8D4"
        android:layout_marginTop="15sp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Select Age" />

    <TextView
        android:id="@+id/tvDate"
        android:textColor="#844046"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/06/2020" />

    <TextView
        android:id="@+id/textView1"
        android:textColor="#b7b7b7"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date" />

    <TextView
        android:id="@+id/tvMonths"
        android:textColor="#844046"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1684684" />

    <TextView
        android:id="@+id/textView7"
        android:textColor="#b7b7b7"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age in Months" />

    <TextView
        android:id="@+id/tvDays"
        android:textColor="#844046"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1684684" />

    <TextView
        android:id="@+id/textView8"
        android:textColor="#b7b7b7"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age in Days" />

    <TextView
        android:id="@+id/tvHours"
        android:textColor="#844046"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1684684" />

    <TextView
        android:id="@+id/textView12"
        android:textColor="#b7b7b7"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age in Hours" />


</LinearLayout>